<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
</head>
<body>
  <%- include('./partials/navBar') %>
    <div class="container mt-3">
        <h2 class="mb-4">Edit Blog</h2>
        <form action="/blog/updateBlog/<%= blog._id %>" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" placeholder="Enter title" required>
          </div>
    
          <div class="form-group">
            <label for="body">Body</label>
            <textarea class="form-control" id="body" name="body" rows="5" placeholder="Enter the content" required><%= blog.body %></textarea>
          </div>
          
          <div class="form-group mt-2">
            <label for="coverImage">Cover Image</label>
            <input type="file" class="form-control-file" id="coverImage" name="coverImage" accept="image/*">
            <% if (blog.coverImageUrl) { %>
              <div class="mt-2">
                <img src="<%= blog.coverImageUrl %>" alt="Current Cover Image" style="max-width: 100%; height: auto;">
              </div>
            <% } %>
          </div>
          <button type="submit" class="btn btn-primary mt-2">Edit</button>
        </form>
    </div>
    <%- include('./partials/script') %>
</body>
</html>
